{
  "name": "bespoke-ai",
  "displayName": "Bespoke AI",
  "description": "Inline ghost-text completions for prose and code using Claude Code",
  "version": "0.3.0",
  "publisher": "trenthm",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bespoke-ai.trigger",
        "title": "Bespoke AI: Trigger Completion"
      },
      {
        "command": "bespoke-ai.toggleEnabled",
        "title": "Bespoke AI: Toggle Enabled"
      },
      {
        "command": "bespoke-ai.cycleMode",
        "title": "Bespoke AI: Cycle Mode"
      },
      {
        "command": "bespoke-ai.clearCache",
        "title": "Bespoke AI: Clear Completion Cache"
      },
      {
        "command": "bespoke-ai.showMenu",
        "title": "Bespoke AI: Show Menu"
      },
      {
        "command": "bespoke-ai.generateCommitMessage",
        "title": "Bespoke AI: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "bespoke-ai.suggestEdit",
        "title": "Bespoke AI: Suggest Edits"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "bespoke-ai.generateCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "keybindings": [
      {
        "command": "bespoke-ai.trigger",
        "key": "ctrl+l",
        "mac": "ctrl+l",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Bespoke AI",
      "properties": {
        "bespokeAI.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable inline completions"
        },
        "bespokeAI.mode": {
          "type": "string",
          "enum": [
            "auto",
            "prose",
            "code"
          ],
          "default": "auto",
          "description": "Completion mode (auto detects based on file type)"
        },
        "bespokeAI.triggerMode": {
          "type": "string",
          "enum": [
            "auto",
            "manual"
          ],
          "default": "auto",
          "description": "Trigger mode: auto fires completions on typing, manual requires explicit trigger (Ctrl+L)"
        },
        "bespokeAI.debounceMs": {
          "type": "number",
          "default": 8000,
          "description": "Delay in milliseconds before triggering completion after typing stops. Manual trigger (Ctrl+L) always fires immediately."
        },
        "bespokeAI.logLevel": {
          "type": "string",
          "enum": [
            "info",
            "debug",
            "trace"
          ],
          "default": "info",
          "description": "Logging verbosity in the Output channel"
        },
        "bespokeAI.claudeCode.model": {
          "type": "string",
          "default": "opus",
          "description": "Claude Code model to use (e.g. haiku, sonnet, opus)"
        },
        "bespokeAI.claudeCode.models": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "description": "Available Claude Code models. The active model is set in claudeCode.model."
        },
        "bespokeAI.prose.contextChars": {
          "type": "number",
          "default": 2000,
          "description": "Number of prefix characters to include for prose context"
        },
        "bespokeAI.prose.suffixChars": {
          "type": "number",
          "default": 2500,
          "description": "Number of suffix characters (after cursor) to include for prose context"
        },
        "bespokeAI.prose.fileTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "markdown",
            "plaintext"
          ],
          "description": "Language IDs treated as prose"
        },
        "bespokeAI.code.contextChars": {
          "type": "number",
          "default": 4000,
          "description": "Number of prefix characters to include for code context"
        },
        "bespokeAI.code.suffixChars": {
          "type": "number",
          "default": 2500,
          "description": "Number of suffix characters (after cursor) to include for code context"
        },
        "bespokeAI.commitMessage.systemPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom system prompt for commit message generation. Leave empty for the built-in prompt."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src/",
    "check": "npm run lint && tsc --noEmit",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:api": "vitest run --config vitest.api.config.ts",
    "test:quality": "vitest run --config vitest.quality.config.ts",
    "benchmark": "tsx src/benchmark/runner.ts",
    "dump-prompts": "tsx src/scripts/dump-prompts.ts",
    "install-ext": "npm run compile && vsce package --allow-missing-repository --skip-license -o bespoke-ai.vsix && codium --install-extension bespoke-ai.vsix --force",
    "format": "prettier --write 'src/**/*.ts' '*.{json,mjs,md}'",
    "format:check": "prettier --check 'src/**/*.ts' '*.{json,mjs,md}'",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,mjs,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {},
  "optionalDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.77"
  }
}
