{
  "name": "bespoke-ai",
  "displayName": "Bespoke AI — Autocomplete + Commit Messages, Powered by Claude Code",
  "description": "AI autocomplete for prose and code, plus one-click commit messages — powered by Claude Code",
  "version": "0.7.5",
  "publisher": "trentmcnitt",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/trentmcnitt/bespoke-ai-vscode-ext"
  },
  "homepage": "https://github.com/trentmcnitt/bespoke-ai-vscode-ext#readme",
  "bugs": {
    "url": "https://github.com/trentmcnitt/bespoke-ai-vscode-ext/issues",
    "email": "feedback@mcnitt.io"
  },
  "keywords": [
    "ai",
    "autocomplete",
    "claude",
    "completions",
    "ghost-text",
    "inline-completions",
    "prose"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bespoke-ai.trigger",
        "title": "Bespoke AI: Trigger Completion"
      },
      {
        "command": "bespoke-ai.toggleEnabled",
        "title": "Bespoke AI: Toggle Enabled"
      },
      {
        "command": "bespoke-ai.cycleMode",
        "title": "Bespoke AI: Cycle Mode"
      },
      {
        "command": "bespoke-ai.clearCache",
        "title": "Bespoke AI: Clear Completion Cache"
      },
      {
        "command": "bespoke-ai.showMenu",
        "title": "Bespoke AI: Show Menu"
      },
      {
        "command": "bespoke-ai.generateCommitMessage",
        "title": "Bespoke AI: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "bespoke-ai.suggestEdit",
        "title": "Bespoke AI: Suggest Edits"
      },
      {
        "command": "bespoke-ai.explainSelection",
        "title": "Bespoke AI: Explain"
      },
      {
        "command": "bespoke-ai.fixSelection",
        "title": "Bespoke AI: Fix"
      },
      {
        "command": "bespoke-ai.doSelection",
        "title": "Bespoke AI: Do"
      },
      {
        "command": "bespoke-ai.restartPools",
        "title": "Bespoke AI: Restart Pools"
      },
      {
        "command": "bespoke-ai.setApiKey",
        "title": "Bespoke AI: Enter API Key"
      },
      {
        "command": "bespoke-ai.removeApiKey",
        "title": "Bespoke AI: Remove API Key"
      },
      {
        "command": "bespoke-ai.addCustomModel",
        "title": "Bespoke AI: Add Custom Model"
      },
      {
        "command": "bespoke-ai.removeCustomModel",
        "title": "Bespoke AI: Remove Custom Model"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "bespoke-ai.generateCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "editor/context": [
        {
          "command": "bespoke-ai.explainSelection",
          "when": "editorHasSelection && bespokeAI.cliAvailable",
          "group": "0_bespoke@1"
        },
        {
          "command": "bespoke-ai.fixSelection",
          "when": "editorHasSelection && bespokeAI.cliAvailable",
          "group": "0_bespoke@2"
        },
        {
          "command": "bespoke-ai.doSelection",
          "when": "editorHasSelection && bespokeAI.cliAvailable",
          "group": "0_bespoke@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "bespoke-ai.trigger",
        "key": "alt+enter",
        "mac": "alt+enter",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Bespoke AI",
      "properties": {
        "bespokeAI.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable inline completions"
        },
        "bespokeAI.mode": {
          "type": "string",
          "enum": [
            "auto",
            "prose",
            "code"
          ],
          "default": "auto",
          "description": "Completion mode (auto detects based on file type)"
        },
        "bespokeAI.triggerPreset": {
          "type": "string",
          "enum": [
            "relaxed",
            "eager",
            "on-demand"
          ],
          "default": "relaxed",
          "enumDescriptions": [
            "Auto-trigger with ~2s debounce. Completions appear after a relaxed pause.",
            "Auto-trigger with ~800ms debounce. Completions fire quickly after you stop typing.",
            "Manual only (Alt+Enter). No auto-trigger — completions appear only when you ask."
          ],
          "description": "Controls when completions appear. Override the debounce timing with bespokeAI.debounceMs."
        },
        "bespokeAI.triggerMode": {
          "type": "string",
          "enum": [
            "auto",
            "manual"
          ],
          "default": "auto",
          "description": "Derived from triggerPreset. Rarely needs manual override.",
          "deprecationMessage": "Use bespokeAI.triggerPreset instead. Choose relaxed, eager, or on-demand."
        },
        "bespokeAI.debounceMs": {
          "type": "number",
          "default": 2000,
          "description": "Override the debounce delay from your trigger preset. Manual trigger (Alt+Enter) always fires immediately."
        },
        "bespokeAI.logLevel": {
          "type": "string",
          "enum": [
            "info",
            "debug",
            "trace"
          ],
          "default": "info",
          "description": "Logging verbosity in the Output channel"
        },
        "bespokeAI.backend": {
          "type": "string",
          "enum": [
            "claude-code",
            "api"
          ],
          "default": "claude-code",
          "enumDescriptions": [
            "Claude Code CLI (requires Claude subscription)",
            "Direct API (requires API key)"
          ],
          "description": "Completion backend. Claude Code CLI uses your Claude subscription; Direct API uses your API key."
        },
        "bespokeAI.api.preset": {
          "type": "string",
          "enum": [
            "anthropic-haiku",
            "anthropic-sonnet",
            "openai-gpt-4o-mini",
            "xai-grok",
            "ollama-default"
          ],
          "enumItemLabels": [
            "Haiku 4.5",
            "Sonnet 4.5",
            "GPT-4o Mini",
            "Grok",
            "Ollama (local)"
          ],
          "enumDescriptions": [
            "Anthropic · Fast, low cost",
            "Anthropic · Best quality",
            "OpenAI · Cheapest option",
            "xAI · Fast, competitive",
            "Ollama · Free, runs locally"
          ],
          "default": "anthropic-haiku",
          "scope": "application",
          "markdownDescription": "Active API model. Choose a built-in preset from the dropdown, or type a custom model ID (from `#bespokeAI.api.customPresets#`). Also changeable via the status bar menu."
        },
        "bespokeAI.api.customPresets": {
          "type": "array",
          "default": [],
          "markdownDescription": "Custom API model presets. Each entry needs `name`, `provider` (`anthropic` or `openai-compat`), and `modelId`. Optional: `baseUrl`, `apiKeyEnvVar`, `maxTokens`, `temperature`. Example:\n```json\n[{\"name\": \"My Llama\", \"provider\": \"openai-compat\", \"modelId\": \"llama3.2\", \"baseUrl\": \"http://localhost:1234/v1\"}]\n```",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name shown in the menu"
              },
              "provider": {
                "type": "string",
                "enum": [
                  "anthropic",
                  "openai-compat"
                ],
                "description": "API provider type"
              },
              "modelId": {
                "type": "string",
                "description": "Model identifier sent to the API"
              },
              "baseUrl": {
                "type": "string",
                "description": "API base URL (required for non-standard endpoints)"
              },
              "apiKeyEnvVar": {
                "type": "string",
                "description": "Environment variable name for the API key"
              },
              "maxTokens": {
                "type": "number",
                "description": "Max completion tokens (default: 200)"
              },
              "temperature": {
                "type": "number",
                "description": "Sampling temperature (default: 0.2)"
              }
            },
            "required": [
              "name",
              "provider",
              "modelId"
            ]
          }
        },
        "bespokeAI.claudeCode.model": {
          "type": "string",
          "default": "haiku",
          "scope": "application",
          "description": "Claude Code model to use (e.g. haiku, sonnet, opus). Also changeable via the status bar menu."
        },
        "bespokeAI.claudeCode.models": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "description": "Available Claude Code models. The active model is set in claudeCode.model."
        },
        "bespokeAI.prose.contextChars": {
          "type": "number",
          "default": 2500,
          "description": "Number of prefix characters to include for prose context"
        },
        "bespokeAI.prose.suffixChars": {
          "type": "number",
          "default": 2000,
          "description": "Number of suffix characters (after cursor) to include for prose context"
        },
        "bespokeAI.prose.fileTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional language IDs to treat as prose (overrides code detection)"
        },
        "bespokeAI.code.contextChars": {
          "type": "number",
          "default": 2500,
          "description": "Number of prefix characters to include for code context"
        },
        "bespokeAI.code.suffixChars": {
          "type": "number",
          "default": 2000,
          "description": "Number of suffix characters (after cursor) to include for code context"
        },
        "bespokeAI.contextMenu.permissionMode": {
          "type": "string",
          "enum": [
            "default",
            "acceptEdits",
            "bypassPermissions"
          ],
          "default": "default",
          "enumDescriptions": [
            "Ask before every action (safest)",
            "Auto-approve file reads and edits, ask for everything else",
            "Skip all permission checks (use with caution)"
          ],
          "description": "Permission mode for context menu commands (Explain, Fix, Do)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src/",
    "check": "npm run lint && tsc --noEmit",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:api": "vitest run --config vitest.api.config.ts",
    "test:quality": "vitest run --config vitest.quality.config.ts",
    "test:quality:compare": "vitest run --config vitest.quality.config.ts -- src/test/quality/prompt-comparison.test.ts",
    "dump-prompts": "tsx src/scripts/dump-prompts.ts",
    "install-ext": "npm run compile && vsce package -o bespoke-ai.vsix && codium --install-extension bespoke-ai.vsix --force",
    "format": "prettier --write 'src/**/*.ts' '*.{json,mjs,md}'",
    "format:check": "prettier --check 'src/**/*.ts' '*.{json,mjs,md}'",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,mjs,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "openai": "^6.25.0",
    "prettier": "^3.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.77"
  }
}
